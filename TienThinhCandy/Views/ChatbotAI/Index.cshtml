
@{
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8" />
    <title>Chatbot CSKH</title>
    <style>
        /* Style cho nút mở chat */
        #openChatBtn {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #28a745;
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
        }
        /* Khung popup chat */
        #chatPopup {
            display: none;
            position: fixed;
            bottom: 60px;
            right: 20px;
            width: 300px;
            border: 1px solid #ccc;
            background: #fefefe;
            box-shadow: 0 0 5px rgba(0,0,0,0.3);
        }

        #chatHeader {
            background: #28a745;
            color: white;
            padding: 5px;
        }

        #chatMessages {
            height: 200px;
            overflow-y: auto;
            padding: 5px;
            background: #f5f5f5;
        }

        .user-message {
            text-align: right;
            margin: 5px;
        }

        .bot-message {
            text-align: left;
            margin: 5px;
            color: #333;
        }

        #chatInput {
            width: 100%;
            height: 50px;
        }

        #sendBtn {
            background: #007bff;
            color: white;
            width: 100%;
        }
    </style>
</head>
<body>
    <!-- Nút mở chat -->
    <button id="openChatBtn" onclick="openChat()">Chat với chúng tôi</button>

    <!-- Popup chat -->
    <div id="chatPopup">
        <div id="chatHeader">Hỗ trợ khách hàng</div>
        <div id="chatMessages"></div>
        <textarea id="chatInput" placeholder="Nhập tin nhắn..."></textarea>
        <button id="sendBtn">Gửi</button>
        <button onclick="closeChat()">Đóng</button>
    </div>

    <!-- jQuery (có thể dùng bản cài sẵn của ASP.NET MVC) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function openChat() {
            $("#chatPopup").show();
            $("#openChatBtn").hide();
        }
        function closeChat() {
            $("#chatPopup").hide();
            $("#openChatBtn").show();
        }
        // Xử lý gửi tin nhắn
        $("#sendBtn").click(function () {
            var msg = $("#chatInput").val();
            if (msg.trim() === "") return;
            // Hiển thị tin nhắn của user
            $("#chatMessages").append("<div class='user-message'><b>Tôi:</b> " + msg + "</div>");
            // Gọi action Ask trên ChatController qua AJAX
            $.ajax({
                url: '@Url.Action("Ask", "ChatbotAI")',
                type: 'POST',
                data: { question: msg },
                success: function (response) {
                    // Hiển thị câu trả lời từ chatbot
                    $("#chatMessages").append("<div class='bot-message'><b>Bot:</b> " + response + "</div>");
                    $("#chatInput").val("");
                    // Cuộn xuống dưới nếu quá dài
                    $("#chatMessages").scrollTop($("#chatMessages")[0].scrollHeight);
                }
            });
        });
    </script>
</body>
</html>
