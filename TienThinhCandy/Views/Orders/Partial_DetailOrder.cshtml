@model IEnumerable<TienThinhCandy.Models.DB.OrderDetail>
@if (Model != null && Model.Any())
{
    var i = 1;
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên sản phẩm</th>
                <td>Ảnh</td>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@item.Product.Title</td>
                    <td><img src="@item.Product.Image" alt="@item.Product.Title" /></td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@TienThinhCandy.Common.Common.FormatNumber((item.Price * item.Quantity), 0)</td>
                    @if (item.Order.Status == 3)
                    {
                        <td><a href="/chi-tiet/@item.Product.Alias-p@(item.Product.Id)" class="btn btn-primary">Đánh giá</a></td>
                    }
                </tr>
                i++;
            }
        </tbody>
    </table>
}

