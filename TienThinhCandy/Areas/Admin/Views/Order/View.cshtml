
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model  TienThinhCandy.Models.DB.Order
@using PagedList

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chi tiết đơn hàng đơn hàng</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mã đơn hàng</label>
                        <p class="form-control"> @Model.Code</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tên khách hàng</label>
                        <p class="form-control"> @Model.CustomerName</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tổng tiền</label>
                        <p class="form-control"> @TienThinhCandy.Common.Common.FormatNumber(Model.TotalAmount, 0)</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <p class="form-control"> @Model.Phone</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Ngày tạo</label>
                        <p class="form-control"> @Model.CreatedDate.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email</label>
                        <p class="form-control"> @Model.Email</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Trạng thái vận chuyển</label>

                        @if (Model.Status == 4)
                        {
                            <p class="form-control">Đã huỷ</p>
                        }
                        else if (Model.Status == 2)
                        {
                            <p class="form-control">Đã vận chuyển</p>
                        }
                        else if (Model.Status == 3)
                        {
                            <p class="form-control">Đã hoàn thành</p>
                        }
                        else
                        {
                            <p class="form-control">Chờ vận chuyển</p>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Phương thức thanh toán</label>
                        @if (Model.TypePayment == 1)
                        {
                            <p class="form-control"> COD </p>
                        }
                        else if (Model.TypePayment == 2)
                        {
                            <p class="form-control"> Chuyển khoản </p>
                        }
                    </div>
                </div>
            </div>
            <div>
                <div class="col-md-12">
                    <h2>Danh sách sản phẩm</h2>
                </div>
                <div class="col-md-12">
                   @Html.Action("Partial_OrderDetail","Order", new {id = Model.Id})
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            Footer
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>


