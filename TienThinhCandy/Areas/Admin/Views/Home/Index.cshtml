@section scripts{
    <script>
        $(document).ready(function () {
            fetchStatisticalData();
        });

        function fetchStatisticalData() {
            var arrDoanhThu = [];
            var arrLoiNhuan = [];
            var arrDate = [];
            $.ajax({

                url: '/Statistical/GetStatistical',
                type: 'GET',
                success: function (response) {
                    $.each(response.Data, function (i, item) {
                        var strDate = moment(item.Date).format('DD/MM/yyyy');
                        arrDate.push(strDate);
                        arrDoanhThu.push(item.DoanhThu)
                        arrLoiNhuan.push(item.LoiNhuan)
                    });
                    var areaChartData = {
                        labels: arrDate,
                        datasets: [
                            {
                                label: 'Lợi nhuận ',
                                backgroundColor: 'rgba(60,141,188,0.9)',
                                borderColor: 'rgba(60,141,188,0.8)',
                                pointRadius: false,
                                pointColor: '#3b8bba',
                                pointStrokeColor: 'rgba(60,141,188,1)',
                                pointHighlightFill: '#fff',
                                pointHighlightStroke: 'rgba(60,141,188,1)',
                                data: arrLoiNhuan
                            },
                            {
                                label: 'Doanh thu',
                                backgroundColor: 'rgba(210, 214, 222, 1)',
                                borderColor: 'rgba(210, 214, 222, 1)',
                                pointRadius: false,
                                pointColor: 'rgba(210, 214, 222, 1)',
                                pointStrokeColor: '#c1c7d1',
                                pointHighlightFill: '#fff',
                                pointHighlightStroke: 'rgba(220,220,220,1)',
                                data: arrDoanhThu
                            },
                        ]
                    }

                    //-------------
                    //- BAR CHART -
                    //-------------
                    var barChartCanvas = $('#barChart').get(0).getContext('2d')
                    var barChartData = $.extend(true, {}, areaChartData)
                    var temp0 = areaChartData.datasets[0]
                    var temp1 = areaChartData.datasets[1]
                    barChartData.datasets[0] = temp1
                    barChartData.datasets[1] = temp0

                    var barChartOptions = {
                        responsive: true,
                        maintainAspectRatio: false,
                        datasetFill: false
                    }

                    new Chart(barChartCanvas, {
                        type: 'bar',
                        data: barChartData,
                        options: barChartOptions
                    })
                    if (response && response.Data) {
                        load_data(response.Data);
                        initializeDataTable();
                    } else {
                        alert("Không có dữ liệu trả về.");
                    }

                },
                error: function () {
                    alert("Đã xảy ra lỗi khi tải dữ liệu.");
                }
            });
        }

        function load_data(data) {
            var strHtml = "";
            var tong = 0;
            $.each(data, function (i, item) {
                var formattedDate = moment(item.Date).format('DD/MM/yyyy');
                strHtml += `
                     <tr>
                         <td>${i + 1}</td>
                         <td>${formattedDate}</td>
                         <td>${item.DoanhThu}</td>
                         <td>${item.LoiNhuan}</td>
                     </tr>`;
                var LN = parseInt(item.LoiNhuan);
                tong += LN;
            });
            $("#load_tong").html(tong);
            $('#load_data').html(strHtml);
        }

        function initializeDataTable() {
            new DataTable('#tktable', {
                layout: {
                    topStart: {
                        buttons: []
                    }
                }
            });
        }


       
        $(function () {
            var CountCVC = 0;
            var CountDVC = 0;
            var CountDHT = 0;
            var CountDH = 0;
            $.ajax({

                url: '/Statistical/StatisticalOrder',
                type: 'GET',
                success: function (response) {
                    $.each(response.Data, function (i, item) {
                        if (item.Status == 4) {
                            CountDH = item.SoLuong;
                        } else if (item.Status == 3) {
                            CountDHT = item.SoLuong ;
                        } else if (item.Status == 2) {
                            CountDVC = item.SoLuong ;
                        } else {
                            CountCVC = item.SoLuong ;
                        }
                    });
                    var pieChartCanvas = $('#pieChart').get(0).getContext('2d')
                    var pieData = {
                        labels: [
                            'Đã huỷ',
                            'Đã hoàn thành',
                            'Đã vận chuyển',
                            'Chờ vận chuyển',
                        ],
                        datasets: [
                            {
                                data: [CountDH, CountDHT, CountDVC, CountCVC],
                                backgroundColor: ['#f56954', '#00a65a', '#f39c12', '#00c0ef'],
                            }
                        ]
                    };
                    var pieOptions = {
                        maintainAspectRatio: false,
                        responsive: true,
                    }

                    new Chart(pieChartCanvas, {
                        type: 'pie',
                        data: pieData,
                        options: pieOptions
                    })
                }
                 
            })
           

        })
    </script>
}
